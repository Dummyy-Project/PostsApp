<div class="container">
    <h1><%= @post.title%></h1>
    <div>
    <%=@post.body%>
    </div>
    <br>
    <%= link_to "Edit post", edit_post_path(@post), class:"btn btn-primary btn-sm"%>
    <%= link_to "Delete", post_path(@post), class:"btn btn-danger btn-sm", method: :delete, data: {confirm: "Are you sure?"} %>
</div>