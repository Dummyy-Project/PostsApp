<div class="container">
<%= form_for @post do |f| %>
    <% if @post.errors.any? %>
        <h2>Errors:</h2>
            <ul>
                <% @post.errors.full_messages.each do |message| %>
                <li><%= message%></li>
                <% end %>
            </ul>
    <% end %>
    <div class="mb-3">
    <%= f.label :title %><br>
    <%= f.text_field :title, class:"form-control" %><br>
    <br>
    <%= f.label :body %><br>
    <%= f.text_area :body, class:"form-control" %><br>
    <br>
    <%= f.submit class: "btn btn-success"%>
    </div>
<% end %>
</div>